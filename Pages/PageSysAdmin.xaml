<Page x:Class="Sweetshop.Pages.PageSysAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sweetshop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSysAdmin">

    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1"  Grid.Row="1" VerticalAlignment="Top" Click="Button_Click">
            <TextBlock Height="20" Margin="0" Width="167" Text="Таблица Администраторов" TextAlignment="Center"></TextBlock>
        </Button>
        <Button Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" Click="Button_Click_1">
            <TextBlock Height="20" Margin="0" Width="167" Text="История входа" TextAlignment="Center"></TextBlock>
        </Button>
    </Grid>
</Page>
